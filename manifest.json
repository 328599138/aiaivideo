{
  "manifest_version": 3,
  "name": "海螺AI视频进度监控",
  "description": "监控海螺AI平台视频生成进度",
  "version": "1.0",
  "permissions": [
    "notifications",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.hailuoai.video/*",
    "https://hailuoai.video/*"
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.hailuoai.video/*",
        "https://hailuoai.video/*"
      ],
      "js": ["content/common.js", "content/hailuo.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 